<div class='container box' id='search-page-box'>
  <div
    class='columns is-flex is-justify-content-space-evenly has-text-weight-semibold'
  >
    {{! Currently reading  }}
    <div class='column is-4'>
      <div class='panel custom-search'>
        <p class='panel-heading'>
          Currently Reading
        </p>
        <div class='box has-text-centered'>
          <p id='current-title' class='is-size-4'>Matilda</p>
          <p id='current-author'>Roald Dahl</p>
          {{#ifEquals user_role 'admin'}}
            <div><button
                id='edit-book-button'
                class='button mt-4'
              >edit</button></div>
            <div id='edit-book-div'><form class='edit-book-form mt-4'><input
                  class='input mb-4'
                  type='text'
                  value='{{title}}'
                  id='edit-title'
                  placeholder='Title'
                /><input
                  class='input mb-4'
                  type='text'
                  value='{{author}}'
                  id='edit-author'
                  placeholder='Author'
                /><button
                  id='save-current-book-button'
                  class='button'
                >save</button></form></div>
          {{/ifEquals}}
        </div>
      </div>
      {{! Add a Review  }}
      <div class='panel custom-search'>
        <p class='panel-heading'>
          Add A Review
        </p>
        <form class='new-review-form'>
          <div class='has-text-centered box'>
            <div class='field has-text-centered'>
              <label class='label'>Stars: </label>
              <div class='control is-expanded"'>
                <div class='select custom-select'>
                  <select class='custom-select'>
                    <option>1</option>
                    <option>2</option>
                    <option>3</option>
                    <option>4</option>
                    <option>5</option>
                  </select>
                </div>
              </div>
            </div><input
              class='input'
              id='review-title'
              type='text'
              placeholder='Book Title'
            />
            <div class='field has-text-centered'>
              <div class='control'>
                <textarea
                  class='textarea'
                  id='review-content'
                  placeholder='Input Review Here'
                  rows='5'
                ></textarea>
              </div>
            </div>
            <button onclick='submitReview()' class='button mt-6'>Submit</button>
          </div>
        </form>
      </div>
    </div>
    {{! Saved books  }}
    <div class='column is-4'>
      <div class='panel custom-search'>
        <p class='panel-heading'>
          Saved Books
        </p>
        <a class='panel-block is-active'>
          <span class='panel-icon'>
            <i class='fas fa-book' aria-hidden='true'></i>
          </span>
          Saved Book 1
        </a>
        <a class='panel-block'>
          <span class='panel-icon'>
            <i class='fas fa-book' aria-hidden='true'></i>
          </span>
          Saved Book 2
        </a>
        <a class='panel-block'>
          <span class='panel-icon'>
            <i class='fas fa-book' aria-hidden='true'></i>
          </span>
          Saved Book 3
        </a>
      </div>
    </div>
    {{! Reviewed books }}
    <div class='column is-4'>
      <div class='panel custom-search'>
        <p class='panel-heading'>
          Books I've Reviewed
        </p>
        {{#unless reviews.length}}
          <h3 class='is-size-5 has-text-weight-semibold p-2'>You haven't
            reviewed anything yet.</h3>
        {{/unless}}
        {{#if reviews.length}}
          {{#each reviews as |review|}}
            <div class='card'>
              <header class='card-header'>
                <p class='card-header-title'>{{review.title}}</p>
                <a class='card-header-icon card-toggle'>
                  <i class='fi-xwsdxl-chevron-wide'></i>
                </a>
              </header>
              <div class='card-content is-hidden'>
                <div class='card-content custom-card'>
                  {{review.content}}
                </div>
              </div>
            </div>
          {{/each}}
        {{/if}}
      </div>
    </div>
  </div>
</div>
{{! <script src='./js/profile.js'></script> }}
<script src='./js/review.js'></script>
<script src='./js/currentBook.js'></script>